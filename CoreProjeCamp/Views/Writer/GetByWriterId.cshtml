@model Entity.Concrate.Writer
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<html>
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/assets/img/favicon.png">
    <title>
        Profil Düzenleme Sayfası
    </title>
    <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <link href="~/assets/demo/demo.css" rel="stylesheet" />
    <style>
        img {
            border-top-left-radius: 50% 50%;
            border-top-right-radius: 50% 50%;
            border-bottom-right-radius: 50% 50%;
            border-bottom-left-radius: 50% 50%;
        }
    </style>
</head>
<body>
    <br />
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title">Profil Bilgileri</h4>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("Update", "Writer", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <form>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Adınız</label>
                                                @Html.TextBoxFor(user => user.Name, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Soyadınız</label>
                                                @Html.TextBoxFor(user => user.Surname, new { @class = "form-control" })
                                            </div>
                                        </div>
                                      
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Kullanıcı Adınız</label>
                                                @Html.TextBoxFor(user => user.Mail, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Telefon Numaranız</label>
                                                @Html.TextBoxFor(user => user.Password, new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Resminizi Seçiniz</label>
                                                <div class="form-group">
                                                    <input type="file" name="Image" value="DefaultPng.png" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary pull-right">Profil Bilgilerini Güncelle</button>
                                    <div class="clearfix"></div>
                                </form>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card card-profile">
                        <div style="margin-top:5px;" class="card-avatar">

                            <center><img class="img" style="height:120px;width:120px" src="~/Images/@ViewBag.ImagePath" /></center>
                        </div>
                        <div class="card-body">
                            <center>
                                <h6 class="card-category text-gray">@Model.Name</h6>
                                <h4 class="card-title">@Model.Name.ToUpper()</h4>
                                <br />
                            </center>

                            <hr />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>