<div class="col-md-3">
    <a href="~/Messages/Add" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluştur</a>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Seçenekler</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item ">
                    <a href="~/Contact/Index" class="nav-link">
                        <i class="fas fa-comments"></i> İletisim

                        <span class="badge bg-primary float-right">@ViewBag.contactMailCount</span>
                    </a>
                </li>
                <li class="nav-item ">
                    <a href="~/Messages/Inbox" class="nav-link">
                        <i class="fas fa-inbox"></i> Gelen Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.receiverMailCount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/Messages/SendBox" class="nav-link">
                        <i class="far fa-envelope"></i> Gönderilen Mesajlar
                        <span class="badge bg-primary float-lg-right">@ViewBag.sendMailCount</span> 
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/Messages/Draft" class="nav-link">
                        <i class="far fa-file-alt"></i> Taslaklar
                        <span class="badge bg-primary float-lg-right">@ViewBag.draftMailCount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/Messages/Trash" class="nav-link">
                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                        <span class="badge bg-primary float-lg-right">@ViewBag.trashMailCount</span>

                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Diğer</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-circle text-danger"></i>
                        Önemliler
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-circle text-warning"></i> Tanıtımlar
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-circle text-primary"></i>
                        Sosyal Medya
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
